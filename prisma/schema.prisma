generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String?
  notelp    String
  role      Role     @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokens  AccessToken[]
  refreshTokens RefreshToken[]

  orders Order[]
}

enum Role {
  Admin
  User
}

model AccessToken {
  id        Int      @id @default(autoincrement())
  token     String
  tokenId   String?  @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String
  tokenId   String?  @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Payment {
  id      Int   @id @default(autoincrement())
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId Int   @unique

  method     PaymentMethod
  status     PaymentStatus @default(PENDING)
  amountPaid Int
  paidAt     DateTime?

  createdAt DateTime @default(now())
}

model OrderItem {
  id      Int   @id @default(autoincrement())
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  quantity Int
  price    Int // harga saat transaksi (snapshot)
  subtotal Int
}

model Order {
  id          Int    @id @default(autoincrement())
  orderNumber String @unique
  user        User   @relation(fields: [userId], references: [id])
  userId      Int

  totalAmount Int
  status      OrderStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items   OrderItem[]
  payment Payment?
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String
  sku      String  @unique
  price    Int // simpan dalam rupiah (contoh: 15000)
  stock    Int
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItem[]
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
}

enum PaymentMethod {
  CASH
  QRIS
  TRANSFER
  DEBIT
  CREDIT
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
